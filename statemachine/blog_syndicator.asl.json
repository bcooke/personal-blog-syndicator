{
  "Comment": "A workflow to check RSS feed and post to social media",
  "StartAt": "Check RSS Feed",
  "States": {
    "Check RSS Feed": {
      "Type": "Task",
      "Resource": "${RssCheckerFunctionArn}",
      "ResultPath": "$.RssCheckerFunctionOutput",
      "Next": "Check If New Post Exists"
    },
    "Check If New Post Exists": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.RssCheckerFunctionOutput.body.url",
          "BooleanEquals": true,
          "Next": "Post To Social Media"
        }
      ],
      "Default": "End"
    },
    "Post To Social Media": {
      "Type": "Parallel",
      "Next": "End",
      "Branches": [
        {
          "StartAt": "Post To LinkedIn",
          "States": {
            "Post To LinkedIn": {
              "Type": "Task",
              "Resource": "${LinkedInPosterFunctionArn}",
              "InputPath": "$.RssCheckerFunctionOutput.body.url",
              "End": true
            }
          }
        },
        {
          "StartAt": "Post To Twitter",
          "States": {
            "Post To Twitter": {
              "Type": "Task",
              "Resource": "${TwitterPosterFunctionArn}",
              "InputPath": "$.RssCheckerFunctionOutput.body.url",
              "End": true
            }
          }
        }
      ]
    },
    "End": {
      "Type": "Pass",
      "End": true
    }
  }
}
